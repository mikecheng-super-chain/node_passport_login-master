<h4><a href="/all_users">View all users</a></h4>
<h2>Edit Users</h2>
<% include ../partials/messages %>
      <form action="/all_users/<%= newUser.id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" name="name" id="name" class="form-control" placeholder="Enter Name" value="<%= newUser.name %>">
        </div>
        <div class="form-group">
          <label for="name">Email</label>
          <input type="email" name="email" id="email" class="form-control" placeholder="Enter Email" value="<%= newUser.email %>">
        </div>
        <div class="form-group">
          <label for="name">Password</label>
          <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password" value="<%= newUser.password %>">
        </div>
        <div><input type="checkbox" onclick="myFunction()">Show Password</div>
        <a href="/all_users/<%= newUser.id %>">Cancel</a>
        <button type="submit" class="btn btn-primary btn-block">
          Update
        </button>
      </form>
      <%- include('../partials/deleteForm.ejs',
                  { url: `/all_users/${newUser.id}` }) %>

      <script>
        function myFunction() {
          var x = document.getElementById("password");
          if (x.type === "password") {
            x.type = "text";
          } else {
            x.type = "password";
          }
        }
        </script>