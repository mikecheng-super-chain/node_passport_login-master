<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<script src="https://use.fontawesome.com/c560c025cf.js"></script>
<div class="container">
    <div class="card shopping-cart">
        <div class="card-header bg-dark text-light">
            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
            Profile
            <a href="/products" class="btn btn-outline-info btn-sm pull-right">Continue choosing</a>
            <div class="clearfix"></div>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data" id='<%= titleName %>'>
                <% for(const pt of listOfProducts) { %>
                    <!-- PRODUCT -->
                    <div class="row">
                        <input type="checkbox" name="id" value="<%= pt._id %>" checked><b></b>
                        <div class="col-12 col-sm-12 col-md-2 text-center">
                            <img class="img-responsive" src="<%= pt.imgsURL[0] %>"   alt="preview" style="width:50%">
                        </div>
                        <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                            <h4 class="product-name"><strong><%= pt.name %> </strong></h4>
                            <p>New Name: <input type="name" id="newName" placeholder="<%= pt.name %>"></p>
                            <h4>
                                <small><%= pt.description.shortDes %> </small>
                            </h4>
                        </div>
                        <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
                            <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
                                <h6><strong>$<%= pt.price %> </strong></h6>
                            </div>
                            <div class="col-4 col-sm-4 col-md-4">
                                <div class="markup">
                                    <input type="number" step="1" max="500" min="0" value="0" name="markup"
                                        title="markup" class="markup" size="4">%
                                </div>
                            </div>
                            <div class="col-2 col-sm-2 col-md-2 text-right">
                                <form method="POST" id='deleteOne' action='./profile/remove/<%= pt._id %>'>
                                    <button type="submit" form='deleteOne' class="btn btn-outline-danger btn-xs"
                                        name='deleteId' value='<%= pt._id %> '>
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <!-- END PRODUCT -->
                <% } %>
            </form>
            <div class="card-footer">
                <div class="pull-right" style="margin: 10px">
                    <button type="submit" form='<%= titleName %>' class="btn btn-success pull-right">Export as
                        JSON</button>
                    <div class="pull-right" style="margin: 5px">
                        Total amount: <b><%= productNum %> </b>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>